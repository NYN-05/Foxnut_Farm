# Environment Variables - DO NOT COMMIT THIS FILE
# Copy this to .env and fill in your actual values

# MongoDB
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB_NAME=foxnuts_farm

# JWT
JWT_SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# Flask
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=change-this-flask-secret-key

# Email (SendGrid)
SENDGRID_API_KEY=SG.xxxxx
FROM_EMAIL=hello@foxnutsfarm.com

# Payment (Stripe)
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

# File Upload (Cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# CORS
FRONTEND_URL=http://localhost:5173

# Server
PORT=5000
HOST=0.0.0.0
